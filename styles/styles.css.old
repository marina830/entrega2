body {
  font-family: "Roboto", Arial, sans-serif;
  font-size: 16px;
  margin: 0;
  padding: 0;
  background-color: #f9fbe7;
  color: #333;
}

h1, h2 {
  font-family: Georgia, serif;
}

header {
  background-color: #372e7d;
  color: #d88787;
  padding: 1rem;
  text-align: center;
}

nav {
  background-color: #c8e6c9;
}
nav .nav-link {
  color: #700a0a !important;
  font-weight: 500;
  transition: all 0.3s ease;
}
nav .nav-link:hover {
  color: #ffffff !important;
  background-color: #a8a634;
  border-radius: 6px;
}
nav .list-group-item {
  background-color: #b7ebc0;
}

.formulario,
.ubicacion {
  background-color: #1e8cd6;
  padding: 1rem;
  margin-bottom: 2rem;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
@media (max-width: 768px) {
  .formulario,
  .ubicacion {
    padding: 0.5rem;
  }
}

form input,
form textarea,
form button {
  font-family: inherit;
  font-size: 16px;
  padding: 0.5rem;
  margin-bottom: 1rem;
  border: 1px solid #9a1a1a;
  border-radius: 4px;
}

button {
  background-color: rgba(53, 119, 37, 0.9019607843);
  border: none;
  cursor: pointer;
  font-weight: bold;
}
button:hover {
  background-color: #44a93f;
}

footer {
  background-color: #0aaf20;
  color: #fff;
  text-align: center;
  padding: 1rem;
}
footer h2 {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 8px;
}
footer p {
  margin: 0;
}

@media (max-width: 768px) {
  .formulario,
  .ubicacion {
    padding: 0.5rem;
  }
}
header {
  background-color: #2e7d32;
  color: white;
  text-align: center;
  padding: 2rem 1rem;
}
header h1 {
  font-family: Georgia, serif;
  font-size: 2.5rem;
}
@media (max-width: 425px) {
  header h1 {
    font-size: 1.8rem;
  }
}

nav {
  background-color: #f8f9fa;
}
nav ul {
  padding: 0;
  margin: 0;
  list-style: none;
}
nav .nav-item {
  margin: 0 0.5rem;
}
nav .nav-item .nav-link {
  color: #700a0a !important;
  font-weight: 500;
  transition: all 0.3s ease;
}
nav .nav-item .nav-link:hover {
  color: white !important;
  background-color: #a8a634;
  border-radius: 6px;
  padding: 0.3rem 0.6rem;
}
@media (max-width: 425px) {
  nav .nav-item .nav-link {
    display: block;
    padding: 0.5rem;
    text-align: center;
  }
}
@media (max-width: 425px) {
  nav ul {
    flex-direction: column;
  }
}

main {
  padding: 2rem 1rem;
}
main .text-center {
  text-align: center;
}
main .text-center h2 {
  font-size: 2rem;
  color: #333;
  margin-bottom: 1rem;
}
main .text-center p {
  font-size: 1.1rem;
  color: #555;
  margin-bottom: 2rem;
}
main .text-center img {
  max-width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
main main img {
  animation: fade-in-up 1s ease-out;
}
@media (max-width: 425px) {
  main {
    padding: 1rem;
  }
  main .text-center h2 {
    font-size: 1.5rem;
  }
  main .text-center p {
    font-size: 1rem;
  }
}

footer {
  background-color: #0aaf20;
  color: #fff;
  text-align: center;
  padding: 1rem;
}
footer p {
  margin: 0;
  font-size: 1rem;
}
footer h2 {
  font-size: 18px;
  font-weight: 500;
  margin-top: 1rem;
  margin-bottom: 8px;
}
footer a {
  text-decoration: none;
}
footer a img {
  width: 30px;
  margin: 0 0.3rem;
  transition: transform 0.3s ease;
}
footer a img:hover {
  transform: scale(1.1) rotate(5deg);
}
@media (max-width: 425px) {
  footer {
    padding: 0.5rem;
  }
  footer h2 {
    font-size: 16px;
  }
  footer p {
    font-size: 0.9rem;
  }
}

form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  background-color: #f4f4f4;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
form input,
form textarea {
  font-family: inherit;
  font-size: 1rem;
  padding: 0.7rem 1rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}
form input:focus,
form textarea:focus {
  outline: none;
  border-color: #44a93f;
  box-shadow: 0 0 5px rgba(68, 169, 63, 0.5);
}
form button {
  background-color: rgba(53, 119, 37, 0.9019607843);
  color: #fff;
  border: none;
  border-radius: 6px;
  padding: 0.8rem 1.2rem;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
form button:hover {
  background-color: #44a93f;
  transform: scale(1.05);
}

@media (max-width: 425px) {
  form {
    padding: 1rem;
  }
  form input,
  form textarea {
    font-size: 0.9rem;
    padding: 0.5rem;
  }
  form button {
    padding: 0.6rem 1rem;
  }
}

